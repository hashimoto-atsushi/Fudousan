<p id="notice"><%= notice %></p>

<h1>物件一覧</h1>

<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.property_name %></td>
        <td><%= apartment.rent.to_s(:delimited) %>円</td>
        <td><%= apartment.address %></td>
        <td><%= apartment.age %>年</td>
        <td><%= apartment.note %></td>
        <td><%= link_to '詳細', apartment %></td>
        <td><%= link_to '編集', edit_apartment_path(apartment) %></td>
        <td><%= link_to '削除', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

