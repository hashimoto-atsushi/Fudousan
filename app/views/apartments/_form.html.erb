      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :property_name %>
    <%= form.text_field :property_name %>
  </div>

  <div class="field">
    <%= form.label :rent %>
    <%= form.number_field :rent %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <%= form.label :note %>
    <%= form.text_area :note %>
  </div>

  <%= form.fields_for :stations do | station | %>
  <div class="field">
    <%= form.label :train_line %>
    <%= station.text_field :train_line %>
  </div>

  <div class="field">
    <%= form.label :station_name %>
    <%= station.text_field :station_name %>
  </div>

  <div class="field">
    <%= form.label :walk_time %>
    <%= station.number_field :walk_time %>
  </div>

  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
