<p id="notice"><%= notice %></p>

<p>
  <strong>Property name:</strong>
  <%= @apartment.property_name %>
</p>

<p>
  <strong>Rent:</strong>
  <%= @apartment.rent %>
</p>

<p>
  <strong>Address:</strong>
  <%= @apartment.address %>
</p>

<p>
  <strong>Age:</strong>
  <%= @apartment.age %>
</p>

<p>
  <strong>Note:</strong>
  <%= @apartment.note %>
</p>
<div>
  <% @apartment.stations.each_with_index do |station, i| %>
  <div>
    <%= i+1 %>
  </div>
  <div>
    <%= station.train_line %>
  </div>
  <div>
    <%= station.station_name %>
  </div>
  <div>
    <%= station.walk_time %>
  </div>
  <% end %>
</div>



<%= link_to 'Edit', edit_apartment_path(@apartment) %> |
<%= link_to 'Back', apartments_path %>
